                    },
                    "org_id": {
                      "description": "organization id of assignable (optional, defaults to caller org)",
                      "type": "string"
                    },
                    "group_id": {
                      "description": "group id of assignable (optional)",
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
