            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "operationId": "deleteNotificationTemplate",
        "summary": "deleteNotificationTemplate",
        "description": "Delete a notification template permanently",
        "tags": [
          "Template"
        ],
        "parameters": [
          {
            "$ref": "#/components/parameters/TemplateIdPathParam"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
